@page "/customers"

@inject NavigationManager NavigationManager
@inject IViewCustomerUseCase ViewCustomerUseCase

<h3>Customer List</h3>

<br />

<button class="btn btn-primary" type="button" @onclick="OnClickAddCustomer">Add Customer</button>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Note</th>
            <th>Options</th>
        </tr>
    </thead>
    @if (customers != null) {
        <tbody>
            @foreach (var cust in customers) {
                <tr>
                    <th>@cust.CustomerId</th>
                    <th>@cust.Name</th>
                    <th>@cust.Address</th>
                    <th>@cust.PhoneNumber</th>
                    <th>@cust.Email</th>
                    <th>@cust.Note</th>
                    <th>Edit / Remove</th>
                </tr>
            }
        </tbody>
    }
</table>

@code {
    private IEnumerable<Customer> customers;

    protected override void OnInitialized() {
        base.OnInitialized();
        customers = ViewCustomerUseCase.Execute();
    }

    private void OnClickAddCustomer() {
        NavigationManager.NavigateTo("/addcustomer");
    }
}